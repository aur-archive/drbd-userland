# arg 1:  the new package version
post_install() {
cat << EOF
Please configure  /etc/drbd.conf then "modprobe drbd" to test it.
Use drbdadm and drbdsetup tools to work with the drbd device(s).
 
EOF
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

pre_remove()
{
modprobe -r drbd
}
op=$1
shift
$op $*
